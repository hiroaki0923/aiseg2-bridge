# AISEG2接続設定
AISEG_HOST=192.168.0.216
AISEG_USER=aiseg
AISEG_PASS=your_password

# MQTT接続設定
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
MQTT_USER=
MQTT_PASS=
MQTT_PREFIX=homeassistant

# デバイス設定
DEVICE_ID=aiseg2-scrape
DEVICE_NAME=AISEG2 (Scraped)
MANUFACTURER=Panasonic
MODEL=AISEG2

# 実行間隔設定（オプション）
INTERVAL_SECONDS=300  # デフォルト: 300秒（5分）
MAX_CONSECUTIVE_ERRORS=10  # 最大連続エラー数
ERROR_RETRY_DELAY=60  # エラー後の待機時間（秒）
LOG_LEVEL=INFO  # ログレベル（DEBUG/INFO/WARNING/ERROR）

# その他の設定（オプション）
AISEG_TIMEOUT=10  # AISEG2へのリクエストタイムアウト（秒）
SCAN_TERM=day  # スキャン期間（通常は変更不要）

# 回路IDの範囲（フォールバック用、通常は自動取得されるため不要）
# CIRCUIT_MIN=1
# CIRCUIT_MAX=64